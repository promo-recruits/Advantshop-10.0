@{
    var layout = "~/Areas/Mobile/Views/Shared/_Layout.cshtml";

    if (!string.IsNullOrEmpty(SettingsDesign.MobileTemplate))
    {
        var templateLayout = "~/Areas/Mobile/Templates/" + SettingsDesign.Template + "/Views/Shared/_Layout.cshtml";
        if (VirtualPathFactory.Exists(templateLayout))
        {
            layout = templateLayout;
        }
    }

    Layout = layout;
}