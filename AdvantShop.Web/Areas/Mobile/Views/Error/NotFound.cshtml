                        <rect width="32" height="16" transform="matrix(-0.906308 -0.422618 -0.422618 0.906308 413.134 97.3186)" fill="#FFB59E" />
                        <rect width="12" height="32" transform="matrix(-0.906308 -0.422618 -0.422618 0.906308 387.513 76.5444)" fill="#D3D4D6" />
                        <rect x="86.8632" y="-54.824" width="316" height="16" transform="rotate(25 86.8632 -54.824)" fill="@colorCode" />
                        <rect width="12" height="16" transform="matrix(-0.906308 -0.422618 -0.422618 0.906308 384.132 83.7948)" fill="#E7E9E8" />
                    </g>
                </g>
                <defs>
                    <clipPath id="clip0">
                        <rect width="416" height="120" fill="white" />
                    </clipPath>
                </defs>
                <filter id="contrast">
                    <feComponentTransfer>
                        <feFuncR type="linear" slope="0.8" exponent="0.1" amplitude="0.1" />
                        <feFuncG type="linear" slope="0.8" exponent="0.1" amplitude="0.1" />
                        <feFuncB type="linear" slope="0.8" exponent="0.1" amplitude="0.1" />
                    </feComponentTransfer>
                </filter>
            </svg>
        </div>
    </div>
    <div class="row center-xs">
        <div class="col-xs-12">
            <div class="site-body-cell-no-left leftmost">
                <div class="err-code" data-text="404">
                    @T("Error.NotFound.404")
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="site-body-cell-no-right">
                <div class="err-reasons">
                    <ul class="err-reasons-list">
                        <li>@T("Error.NotFound.PageWasDeleted")</li>
                    </ul>
                    <div class="m-b-md">
                        <a class="btn btn-submit btn-big m-xs" href="@Url.RouteUrl("Home")">@T("Error.NotFound.BackToMainPage")</a>
                        <a class="btn btn-submit btn-big m-xs" href="@Url.RouteUrl("CatalogRoot")">@T("Error.NotFound.BackCatalog")</a>
                    </div>
                </div>
                @Html.StaticBlock("Error404")
            </div>
        </div>
    </div>
</div>
