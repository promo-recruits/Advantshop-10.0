                    </mask>
                    <g mask="url(#mask0)">
                        <rect x="28.5008" y="72.9169" width="316" height="32" transform="rotate(-25 28.5008 72.9169)" fill="@colorCode" filter="url(#contrast)" />
                        <rect x="31.8817" y="80.1674" width="316" height="16" transform="rotate(-25 31.8817 80.1674)" fill="@colorCode" />
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M1.50648 104.183C0.60518 104.233 0.103768 103.158 0.7217 102.5L28.5008 72.9169C29.9909 72.9576 33.4784 74.1266 35.507 78.4769C37.5355 82.8272 36.1893 86.2502 35.2627 87.4179C36.7528 87.4586 40.2403 88.6276 42.2689 92.9778C44.2974 97.3281 42.9512 100.751 42.0246 101.919L1.50648 104.183Z" fill="#F5D7BF" />
                        <mask id="mask1" mask-type="alpha" maskUnits="userSpaceOnUse" x="-7" y="84" width="30" height="32">
                            <path d="M-6.06104 93.4469L10.2525 85.8398C10.2525 85.8398 15.1492 91.6083 17.1365 95.8702C19.1239 100.132 20.3953 107.591 20.3953 107.591L4.0818 115.198L-6.06104 93.4469Z" fill="#4C4C4C" />
                        </mask>
                        <g mask="url(#mask1)">
                            <path d="M1.50649 104.183C0.605188 104.233 0.103777 103.158 0.721708 102.5L28.5008 72.9169L42.0246 101.919L1.50649 104.183Z" fill="#4C4C4C" />
                        </g>
                    </g>
                    <mask id="mask2" mask-type="alpha" maskUnits="userSpaceOnUse" x="205" y="-5" width="221" height="132">
                        <path d="M408.551 126.076L425.456 89.8239L226.068 -3.15215L225.646 -2.24584C223.279 2.82948 226.031 6.39299 227.702 7.54033L245.467 19.1342L213.991 13.2835L235.08 31.9447L212.544 25.8497L221.73 34.5463L220.039 38.1716L408.551 126.076Z" fill="#C4C4C4" />
                    </mask>
                    <g mask="url(#mask2)">
                        <rect x="90.2441" y="-62.0744" width="316" height="32" transform="rotate(25 90.2441 -62.0744)" fill="@colorCode" filter="url(#contrast)" />
