@model AdvantShop.ViewModel.MyAccount.ChangePasswordViewModel
@using (Html.BeginForm("ChangePassword", "MyAccount", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="myaccount-change-password">
        <div class="h2 myaccount-subtitle">@T("MyAccount.ChangePassword.ChangePassword")</div>
        <span class="form-field-name vertical-interval-small">@T("MyAccount.ChangePassword.PasswordInfo")</span>
        <div class="row">
            <div class="col-xs-12 col-sm-8">
                <label class="row middle-xs">
                    <span class="col-xs-12 col-sm-4">
                        <span class="form-field-name vertical-interval-xsmall">@T("MyAccount.ChangePassword.NewPassword")</span>
                    </span>
                    <span class="col-xs-12 col-sm-8">
                        <span class="form-field-input vertical-interval-xsmall">@Html.PasswordFor(x => x.NewPassword, new { autocomplete = "off", @class = "input-small", name = "newPassword", required = "required" })</span>
                    </span>
                </label>
                <label class="row middle-xs">
                    <span class="col-xs-12 col-sm-4">
                        <span class="form-field-name vertical-interval-xsmall">@T("MyAccount.ChangePassword.NewPasswordConfirm")</span>
                    </span>
                    <span class="col-xs-12 col-sm-8">
                        <span class="form-field-input vertical-interval-xsmall">@Html.PasswordFor(x => x.NewPasswordConfirm, new { autocomplete = "off", @class = "input-small", name = "newPasswordAgain" , required = "required" })</span>
                    </span>
                </label>
                <div class="row middle-xs">
                    <span class="col-sm-8 col-sm-offset-4 col-xs-12">
                        <span class="form-field-input vertical-interval-xsmall">
                            <input type="submit" class="btn btn-middle btn-confirm" value="@T("MyAccount.ChangePassword.Change")" />
                        </span>
                    </span>
                </div>
            </div>
        </div>
    </div>
}