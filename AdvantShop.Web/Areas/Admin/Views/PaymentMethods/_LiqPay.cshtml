@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.LiqPayPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.LiqPay.MerchantNumber")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.LiqPay.MerchantNumber").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.LiqPay.MerchantNumber")">
                @T("Admin.PaymentMethods.LiqPay.NumbenCanSeeInSettings")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.LiqPay.MerchantPassword")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantSig, new {ng_model = "paymentMethod.Parameters.MerchantSig", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.LiqPay.MerchantPassword").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.LiqPay.MerchantPassword")">
                @T("Admin.PaymentMethods.LiqPay.PasswordCanBeSeeInSettings")
            </help-trigger>
        </div>
    </div>
