@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.AlfabankPaymentModel


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.PaymentMeythods.Alfabank.GatewayCountry")
    </div>
    <div class="col-xs-6 relative">
        @Html.DropDownListFor(x => x.GatewayCountry, Model.GatewayCountries, new { ng_model = "paymentMethod.Parameters.GatewayCountry", ng_init = "paymentMethod.Parameters.GatewayCountry='" + Model.GatewayCountry + "'", @class = "form-control" })
    </div>
    <help-trigger class="ng-cloak" data-title="@T("Admin.PaymentMeythods.Alfabank.GatewayCountry")">
        @T("Admin.PaymentMethods.Alfabank.GatewayCountry.DescriptionRu")<br/>
        @T("Admin.PaymentMethods.Alfabank.GatewayCountry.DescriptionKz")
    </help-trigger>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.Alfabank.Login")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.UserName, new { ng_model = "paymentMethod.Parameters.UserName", @class = "form-control", required = "required", validation_input_text = @T("Admin.PaymentMethods.Alfabank.Login").ToString() })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Alfabank.Login")">
            @T("Admin.PaymentMethods.Alfabank.ShopLogin")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.Alfabank.Password")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.Password, new { ng_model = "paymentMethod.Parameters.Password", @class = "form-control", required = "required", validation_input_text = @T("Admin.PaymentMethods.Alfabank.Password").ToString() })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Alfabank.Password")">
            @T("Admin.PaymentMethods.Alfabank.ShopPassword")
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.PaymentMethods.Alfabank.TestMode")
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.UseTestMode, new { ng_model = "paymentMethod.Parameters.UseTestMode", @class = "adv-checkbox-input", ng_init = "paymentMethod.Parameters.UseTestMode=" + Model.UseTestMode.ToLowerString() })
            <span class="adv-checkbox-emul"></span>
        </label>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.PaymentMethods.Alfabank.SubsidiaryMerchantLogin")
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.MerchantLogin, new { ng_model = "paymentMethod.Parameters.MerchantLogin", @class = "form-control" })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Alfabank.SubsidiaryMerchantLogin")">
            @T("Admin.PaymentMethods.Alfabank.RegisterOrderChildMerchant")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.PaymentMethods.Alfabank.SendDataForPrint")
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.SendReceiptData, new { ng_model = "paymentMethod.Parameters.SendReceiptData", @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
        </label>
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="">
            @T("Admin.PaymentMethods.Alfabank.SendDataForPrint")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.PaymentMeythods.Alfabank.TaxSystem")
    </div>
    <div class="col-xs-6 relative">
        @Html.DropDownListFor(x => x.Taxation, Model.Taxations, new { ng_model = "paymentMethod.Parameters.Taxation", ng_init = "paymentMethod.Parameters.Taxation='" + Model.Taxation + "'", @class = "form-control" })
    </div>
    <help-trigger class="ng-cloak" data-title="@T("Admin.PaymentMeythods.Alfabank.TaxSystem")">
        @T("Admin.PaymentMethods.Alfabank.UsedWhenSendingData")
    </help-trigger>
</div>
