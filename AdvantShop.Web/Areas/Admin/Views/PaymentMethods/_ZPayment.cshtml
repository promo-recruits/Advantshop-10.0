@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.ZPaymentPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.ZPayment.StoreIdentifier")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Purse, new { ng_model = "paymentMethod.Parameters.Purse", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.ZPayment.StoreIdentifier").ToString() })
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.ZPayment.UserPassword")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Password, new { ng_model = "paymentMethod.Parameters.Password", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.ZPayment.UserPassword").ToString() })
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.ZPayment.KeyForEncryption")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.ZPayment.KeyForEncryption").ToString() })
        </div>
    </div>



