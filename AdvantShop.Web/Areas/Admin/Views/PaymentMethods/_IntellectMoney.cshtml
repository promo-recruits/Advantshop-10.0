@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.IntellectMoneyPaymentModel


    <div class="form-group row middle-xs">
        <div class="col-xs-12">
            @T("Admin.PaymentMethods.IntellectMoney.DoNotForgetIntellectMoney") <strong>@T("Admin.PaymentMethods.IntellectMoney.WebMoneyProtocol")</strong>.
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.IntellectMoney.Identifer")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.IntellectMoney.Identifer").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.IntellectMoney.Identifer")">
                @T("Admin.PaymentMethods.IntellectMoney.IdentiferInSystemIntellectMoney")
            </help-trigger>
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.IntellectMoney.SecretCode")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.SecretKey, new {ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.IntellectMoney.SecretCode").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.IntellectMoney.SecretKey")">
                @T("Admin.PaymentMethods.IntellectMoney.SecretCode")
            </help-trigger>
        </div>
    </div>


