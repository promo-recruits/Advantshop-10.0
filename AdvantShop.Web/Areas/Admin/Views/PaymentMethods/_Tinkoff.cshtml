@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.TinkoffPaymentModel



<div class="form-group row middle-xs">
    <div class="col-xs-9">
        <div class="adv-panel-info" style="max-width:910px">
            Если у вас нет учетной записи в сервисе Тинькофф, вы можете зарегистрироваться по <a href="https://go.advantshop.net/tinkoff" target="_blank">ссылке</a>
        </div>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.Tinkoff.TerminalIdentifier")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.TerminalKey, new { ng_model = "paymentMethod.Parameters.TerminalKey", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.Tinkoff.TerminalIdentifier").ToString() })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Tinkoff.TerminalIdentifier")">
            @T("Admin.PaymentMethods.Tinkoff.UniqueIdentifier")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.Tinkoff.SecretKey")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.SecretKey, new { ng_model = "paymentMethod.Parameters.SecretKey", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.Tinkoff.SecretKey").ToString() })
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Tinkoff.SecretKey")">
            @T("Admin.PaymentMethods.Tinkoff.UsedSignRequests")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.Tinkoff.SendDataForPrint")</span>
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.SendReceiptData, new { ng_model = "paymentMethod.Parameters.SendReceiptData", @class = "adv-checkbox-input" })
            <span class="adv-checkbox-emul"></span>
        </label>
        <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="">
            @T("Admin.PaymentMethods.Tinkoff.SendDataForPrint")
        </help-trigger>
    </div>
</div>


<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.PaymentMeythods.Tinkoff.TaxSystem")
    </div>
    <div class="col-xs-6 relative">
        @Html.DropDownListFor(x => x.Taxation, Model.Taxations, new { ng_model = "paymentMethod.Parameters.Taxation", ng_init = "paymentMethod.Parameters.Taxation='" + Model.Taxation + "'", @class = "form-control" })
    </div>
    <help-trigger class="ng-cloak" data-title="@T("Admin.PaymentMeythods.Tinkoff.TaxSystem")">
        @T("Admin.PaymentMethods.Tinkoff.UsedWhenSendingData")
    </help-trigger>
</div>
