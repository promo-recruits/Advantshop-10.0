@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.MailRuPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.MailRu.AccessKey")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.Key, new { ng_model = "paymentMethod.Parameters.Key", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.MailRu.AccessKey").ToString() })
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.MailRu.StoreNumber")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ShopId, new {ng_model = "paymentMethod.Parameters.ShopId", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.MailRu.StoreNumber").ToString() })
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.MailRu.CryptographicCache")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CryptoHex, new {ng_model = "paymentMethod.Parameters.CryptoHex", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.MailRu.CryptographicCache").ToString() })
        </div>
    </div>


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            @T("Admin.PaymentsMethods.MailRu.UniquenessOrder")
        </div>
        <div class="col-xs-6 relative">
            <label class="adv-checkbox-label form-label-block m-r-xs">
                @Html.CheckBoxFor(x => x.KeepUnique, new {ng_model = "paymentMethod.Parameters.KeepUnique", ng_init = "paymentMethod.Parameters.KeepUnique=" + Model.KeepUnique.ToLowerString(), @class = "adv-checkbox-input"})
                <span class="adv-checkbox-emul"></span>
            </label>
            <help-trigger class="ng-cloak" data-title="@T("Admin.PaymentsMethods.MailRu.UniquenessOrder")">
                @T("Admin.PaymentMethods.MailRu.issuer_id")
            </help-trigger>
        </div>
    </div>


