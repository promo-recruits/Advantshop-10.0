@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.AvangardPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.Avangard.IDSalesPoint")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ShopId, new { ng_model = "paymentMethod.Parameters.ShopId", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.Avangard.IDSalesPoint").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="ID">
                @T("Admin.PaymentMethods.Avangard.UniqueID")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.Avangard.Password")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ShopPassword, new { ng_model = "paymentMethod.Parameters.ShopPassword", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.Avangard.Password").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Avangard.Password")">
                @T("Admin.PaymentMethods.Avangard.PasswordForThisCurrentPoint")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.Avangard.SignatureAcquiringSystem")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.AvSign, new { ng_model = "paymentMethod.Parameters.AvSign", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.Avangard.SignatureAcquiringSystem").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.Avangard.SignatureAcquiringSystem")">
                @T("Admin.PaymentMethods.Avangard.IssuedByTechnicalSupport")
            </help-trigger>
        </div>
    </div>


