@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.YesCreditPaymentModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.YesCredit.StoreIdentifier")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MerchantId, new { ng_model = "paymentMethod.Parameters.MerchantId", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.YesCredit.StoreIdentifier").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.YesCredit.StoreIdentifier")">
                @T("Admin.PaymentMethods.YesCredit.StoreIdentifierYesCreditSystem")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.YesCredit.MinimumPrice")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.MinimumPrice, new { ng_model = "paymentMethod.Parameters.MinimumPrice", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.YesCredit.MinimumPrice").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.YesCredit.MinimumPrice")">
                @T("Admin.PaymentMethods.YesCredit.ButtonBuyOnCredit")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.PaymentMethods.YesCredit.FirstPaymentAmount")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.FirstPayment, new { ng_model = "paymentMethod.Parameters.FirstPayment", @class = "form-control", required = "required", validation_input_text = T("Admin.PaymentMethods.YesCredit.FirstPaymentAmount").ToString() })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.PaymentMethods.YesCredit.FirstPaymentAmount")">
                @T("Admin.PaymentMethods.YesCredit.PercrentageOfTheCost")
            </help-trigger>
        </div>
    </div>


