@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.PSBankPaymentModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.PSBank.FirstComponent")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.FirstComponent, new { ng_model = "paymentMethod.Parameters.FirstComponent", @class = "form-control", required = "required", validation_input_text = @T("Admin.PaymentMethods.PSBank.FirstComponent").ToString() })
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.PaymentMethods.PSBank.SecondComponent")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.SecondComponent, new { ng_model = "paymentMethod.Parameters.SecondComponent", @class = "form-control", required = "required", validation_input_text = @T("Admin.PaymentMethods.PSBank.SecondComponent").ToString() })
    </div>
</div>

