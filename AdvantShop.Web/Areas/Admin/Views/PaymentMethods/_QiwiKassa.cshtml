@model AdvantShop.Web.Infrastructure.Admin.PaymentMethods.QiwiKassaPaymentModel

    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">Секретный ключ</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.SecrectKey, new { ng_model = "paymentMethod.Parameters.SecrectKey", @class = "form-control", required = "required", validation_input_text = "Секретный ключ" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Секретный ключ">
                Секретный ключ из пары ключей авторизации (Блок "Аутентификационные данные")
            </help-trigger>
        </div>
    </div>
