@model AdvantShop.Web.Admin.ViewModels.Home.PartnersDashboardViewModel

<div class="ibox float-e-margins">
    <div class="ibox-content partners-block">
        <h3 class="partners-title">@T("Admin.Home.PartnersDashboard.Title")</h3>
        <div class="carousel carousel-partners"  @*data-oc-lazy-load="[{files:[
             '../scripts/_common/carousel/carouselNative.js', 
             '../scripts/_common/carousel/carousel.js', 
             '../scripts/_common/carousel/controllers/carouselController.js',
             '../scripts/_common/carousel/directives/carouselDirectives.js',
             '../scripts/_common/carousel/services/carouselService.js'], serie: true}]"*@>
            <div class="carousel-inner">
                <ul class="partners-list flex carousel-list"
                    data-carousel
                    data-stretch="true"
                    data-dots="true"
                    data-prev-icon="fa fa-angle-left carousel-partners-arrow"
                    data-next-icon="fa fa-angle-right carousel-partners-arrow"
                    data-speed="700"
                    data-auto="true"
                    data-visible-max="1">
                    
                    @for (var i =0; i <  Model.News.Count; i++)
                    {
                        <li class="carousel-partners-item">
                            <a href="@Model.News[i].LinkSrc" target="_blank" onclick="return advTrack('@AdvantShop.Track.ETrackEvent.Core_Common_PartnersDashboard_ClickBanner.ToString()');">
                                @if (Model.News[i].Picture != null)
                                {
                                    <img @Html.Raw((i == 0 ? "src" : "data-src") + "=\"" + Model.News[i].Picture + "\"") alt="@Html.AttributeEncode(Model.News[i].Name)" />
                                }
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
