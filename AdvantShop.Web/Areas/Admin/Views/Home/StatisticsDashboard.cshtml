                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="OrdersMonthCount">@T("Admin.Home.StatisticsDashboard.TotalOrdersMonthCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="OrdersMonthCount">@Model.TotalOrdersMonthCount</h1>
                        <small class="name-quantity" data-e2e-dashboard-quantity="OrdersMonthCount">@Model.TotalOrdersMonthPrice</small>
                    </div>
                </div>
            }
            @if (Model.ShowTotalOrdersAllTime)
