            }
            @if (Model.ShowTotalCallsMonth)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="CallsMonthCount">@T("Admin.Home.StatisticsDashboard.TotalCallsMonthCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="CallsMonthCount">@Model.TotalCallsMonthCount</h1>
                        @if (!Model.TelephonyConfigured)
                        {
                            <small class="connect-service" data-e2e-dashboard-service="ConnectServiceCallsMonth">
                                <a href="@Url.Action("index", "settingstelephony")">@T("Admin.Home.StatisticsDashboard.ConfigureTelephony")</a>
