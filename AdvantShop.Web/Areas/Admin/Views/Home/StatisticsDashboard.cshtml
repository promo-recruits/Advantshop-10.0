                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="LeadsYesterdayCount">@Model.TotalLeadsYesterdayCount</h1>
                        <small class="name-quantity" data-e2e-dashboard-quantity="LeadsYesterdayCount">@Model.TotalLeadsYesterdayPrice</small>
