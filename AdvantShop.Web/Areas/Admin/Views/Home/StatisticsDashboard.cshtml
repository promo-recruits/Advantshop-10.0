            }
            @if (Model.ShowTotalReviewsMonth)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="ReviewsMonthCount">@T("Admin.Home.StatisticsDashboard.TotalReviewsMonthCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="ReviewsMonthCount">@Model.TotalReviewsMonthCount</h1>
