            }

            @* Calls *@
            @if (Model.ShowTotalCallsToday)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="CallsTodayCount">@T("Admin.Home.StatisticsDashboard.TotalCallsTodayCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="CallsTodayCount">@Model.TotalCallsTodayCount</h1>
                        @if (!Model.TelephonyConfigured)
                        {
                            <small class="connect-service" data-e2e-dashboard-service="ConnectServiceCallsToday">
                                <a href="@Url.Action("index", "settingstelephony")">@T("Admin.Home.StatisticsDashboard.ConfigureTelephony")</a>
                            </small>
                        }
                    </div>
                </div>
            }
            @if (Model.ShowTotalCallsYesterday)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="CallsYesterdayCount">@T("Admin.Home.StatisticsDashboard.TotalCallsYesterdayCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="CallsYesterdayCount">@Model.TotalCallsYesterdayCount</h1>
                        @if (!Model.TelephonyConfigured)
                        {
                            <small class="connect-service" data-e2e-dashboard-service="ConnectServiceCallsYesterday">
