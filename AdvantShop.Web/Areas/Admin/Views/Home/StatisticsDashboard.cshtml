                        <h5 class="statistics-title" data-e2e-dashboard="LeadsMonthCount">@T("Admin.Home.StatisticsDashboard.TotalLeadsMonthCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
