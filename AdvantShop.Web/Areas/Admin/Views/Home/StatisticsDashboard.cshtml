    </div>
</div>

<script type="text/ng-template" id="statisticsModal.html">
    <div class="animated1 bounceInRight1">

        @using (Html.BeginForm("SaveStatisticsSettings", "Home", FormMethod.Post, new { name = "saveStatistics", novalidate = "novalidate" }))
        {
            <div class="modal-header">
                <ui-modal-cross></ui-modal-cross>
                <h1 class="modal-header-title" data-e2e-header="IndicatorsTitle">@T("Admin.Home.StatisticsDashboard.Indicators")</h1>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group label-wrap">
                            <label class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalProductsCount")
                                @Html.CheckBoxFor(m => m.ShowTotalProducts, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "ProductsCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>

                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalOrdersToday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalOrdersTodayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalOrdersToday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "OrdersTodayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>

                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalOrdersYesterday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalOrdersYesterdayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalOrdersYesterday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "OrdersYesterdayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalOrdersMonth" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalOrdersMonthCount")
                                @Html.CheckBoxFor(m => m.ShowTotalOrdersMonth, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "OrdersMonthCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalOrdersAllTime" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalOrdersAllTimeCount")
                                @Html.CheckBoxFor(m => m.ShowTotalOrdersAllTime, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "OrdersAllTimeCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalLeadsToday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalLeadsTodayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalLeadsToday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "LeadsTodayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>
                        <div class="form-group label-wrap">
                            <label for="ShowTotalLeadsYesterday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalLeadsYesterdayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalLeadsYesterday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "LeadsYesterdayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group label-wrap">
                            <label for="ShowTotalLeadsMonth" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalLeadsMonthCount")
                                @Html.CheckBoxFor(m => m.ShowTotalLeadsMonth, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "LeadsMonthCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>

                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalCallsToday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalCallsTodayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalCallsToday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "CallsTodayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalCallsYesterday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalCallsYesterdayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalCallsYesterday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "CallsYesterdayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalCallsMonth" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalCallsMonthCount")
                                @Html.CheckBoxFor(m => m.ShowTotalCallsMonth, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "CallsMonthCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalReviewsToday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalReviewsTodayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalReviewsToday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "ReviewsTodayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>

                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalReviewsYesterday" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalReviewsYesterdayCount")
                                @Html.CheckBoxFor(m => m.ShowTotalReviewsYesterday, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "ReviewsYesterdayCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>

                        <div class="form-group label-wrap">
                            <label for="ShowTotalReviewsMonth" class="adv-checkbox-label category-label">
                                @T("Admin.Home.StatisticsDashboard.TotalReviewsMonthCount")
                                @Html.CheckBoxFor(m => m.ShowTotalReviewsMonth, new { @class = "adv-checkbox-input", data_e2e_dashboard_check = "ReviewsMonthCount" })
                                <span class="adv-checkbox-emul"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-save btn-primary">@T("Admin.Save")</button>
                <ui-modal-dismiss><button type="button" class="btn btn-default btn-cancel">@T("Admin.Cancel")</button></ui-modal-dismiss>
            </div>
        }

    </div>
</script>