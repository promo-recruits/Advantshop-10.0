            }

            @* Reviews *@
            @if (Model.ShowTotalReviewsToday)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="ReviewsTodayCount">@T("Admin.Home.StatisticsDashboard.TotalReviewsTodayCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="ReviewsTodayCount">@Model.TotalReviewsTodayCount</h1>
                    </div>
                </div>
            }
            @if (Model.ShowTotalReviewsYesterday)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="ReviewsYesterdayCount">@T("Admin.Home.StatisticsDashboard.TotalReviewsYesterdayCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="ReviewsYesterdayCount">@Model.TotalReviewsYesterdayCount</h1>
