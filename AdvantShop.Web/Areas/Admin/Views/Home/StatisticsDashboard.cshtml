@model AdvantShop.Web.Admin.ViewModels.Home.StatisticsDashboardViewModel

<div class="ibox">
    <div class="ibox-content statistics-block">
        <div class="ibox-tools">
            <ui-modal-trigger template-url="statisticsModal.html">
                <a class="dropdown-toggle" data-e2e-indicators="IndicatorsShow" href="#" data-toggle="modal" data-target="#statisticsModal">
                    <i class="fa fa-cog"></i>
                </a>
            </ui-modal-trigger>
        </div>
        @if (!Model.AnyActive)
        {
            <ui-modal-trigger template-url="statisticsModal.html">
                <div class="statistics-block-choose-id dropdown-toggle">
                    <a class="choose-id-link" data-e2e-no-indicators="IndicatorsShow" href="#" data-toggle="modal" data-target="#statisticsModal">@T("Admin.Home.StatisticsDashboard.ShowIndicators")</a>
                </div>
            </ui-modal-trigger>
        }

        <div class="statistics-block-inner">
            @if (Model.ShowTotalProducts)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="ProductsCount">@T("Admin.Home.StatisticsDashboard.TotalProductsCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="ProductsCount">@Model.TotalProductsCount</h1>
                        <small class="name-quantity" data-e2e-dashboard-quantity="ProductsCount">@T("Admin.Home.Statistics.Pieces")</small>
                    </div>
                </div>
            }

            @* Orders *@
            @if (Model.ShowTotalOrdersToday)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="OrdersTodayCount">@T("Admin.Home.StatisticsDashboard.TotalOrdersTodayCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="OrdersTodayCount">@Model.TotalOrdersTodayCount</h1>
                        <small class="name-quantity" data-e2e-dashboard-quantity="OrdersTodayCount">@Model.TotalOrdersTodayPrice</small>
                    </div>
                </div>
            }
            @if (Model.ShowTotalOrdersYesterday)
            {
                <div class="statistics-block-content">
                    <div class="ibox-title statistics-header">
                        <h5 class="statistics-title" data-e2e-dashboard="OrdersYesterdayCount">@T("Admin.Home.StatisticsDashboard.TotalOrdersYesterdayCount")</h5>
                    </div>
                    <div class="ibox-content statistics-content no-border">
                        <h1 class="no-margins statistics-content-header" data-e2e-dashboard-content="OrdersYesterdayCount">@Model.TotalOrdersYesterdayCount</h1>
                        <small class="name-quantity" data-e2e-dashboard-quantity="OrdersYesterdayCount">@Model.TotalOrdersYesterdayPrice</small>
                    </div>
                </div>
            }
            @if (Model.ShowTotalOrdersMonth)
