@using AdvantShop.Repository.Currencies
@model AdvantShop.Web.Infrastructure.Admin.ShippingMethods.ShippingByOrderPriceShippingAdminModel


    <div class="form-group row">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.ShippingMethods.ShipByPrice.OrderPrice")</span>
        </div>
        <div class="col-xs-8 relative">
            <shipping-by-order-price-method method-id="@Model.ShippingMethodId"
                                            price-ranges="@Model.PriceRanges"
                                            currency-label="@Model.CurrencySymbol">
            </shipping-by-order-price-method>
        </div>
    </div>



    <div class="form-group row">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.ShippingMethods.ShipByPrice.CalculateBaseOn")</span>
        </div>
        <div class="col-xs-6 relative">
            <div class="inline valign-middle">
                <div class="m-b-sm">
                    <label class="adv-radio-label">
                        @T("Admin.ShippingMethods.ShipByPrice.Baskets")
                        @Html.RadioButton("DependsOnCartPrice", "true", Model.DependsOnCartPrice == true, new { @class = "adv-radio-input", ng_model = "shippingMethod.Params.DependsOnCartPrice", required = "required", validation_input_text = T("Admin.ShippingMethods.ShipByPrice.CalculateBaseOn") })
                        <span class="adv-radio-emul"></span>
                    </label>
                </div>
                <div>
                    <label class="adv-radio-label">
                        @T("Admin.ShippingMethods.ShipByPrice.FinalCostOfOrder")
                        @Html.RadioButton("DependsOnCartPrice", "false", Model.DependsOnCartPrice == false, new { @class = "adv-radio-input", ng_model = "shippingMethod.Params.DependsOnCartPrice", required = "required", validation_input_text = T("Admin.ShippingMethods.ShipByPrice.CalculateBaseOn") })
                        <span class="adv-radio-emul"></span>
                    </label>
                </div>
            </div>

            <help-trigger class="ng-cloak" data-title="@T("Admin.ShippingMethods.ShipByPrice.CalculatingCostOfDelivery")">
                @T("Admin.ShippingMethods.ShipByPrice.CalculateCostOfDeliveryBasedOnBasketCost")
                @T("Admin.ShippingMethods.ShipByPrice.OtherwiseFullAmount")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span>@T("Admin.ShippingMethods.ShipByPrice.DeliveryTime")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.DeliveryTime, new { ng_model = "shippingMethod.Params.DeliveryTime", @class = "form-control" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.ShippingMethods.ShipByPrice.DeliveryTime")">
                @T("Admin.ShippingMethods.ShipByPrice.DeliveryTimeAsPeriodOfTime")<br><br>
                @T("Admin.ShippingMethods.ShipByPrice.ForExample2Days")
            </help-trigger>
        </div>
    </div>
