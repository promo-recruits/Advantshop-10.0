@model AdvantShop.Web.Infrastructure.Admin.ShippingMethods.NovaPoshtaShippingAdminModel



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.ShippingMethods.NovaPoshta.APIkey")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.ApiKey, new {ng_model = "shippingMethod.Params.APIKey", @class = "form-control", required = "required", validation_input_text = T("Admin.ShippingMethods.NovaPoshta.APIkey") })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.ShippingMethods.NovaPoshta.APIkey")">
                @T("Admin.ShippingMethods.NovaPoshta.GetAPIkeyFromManager")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.ShippingMethods.NovaPoshta.DepartureCity")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.CityFrom, new {ng_model = "shippingMethod.Params.CityFrom", @class = "form-control", required = "required", validation_input_text = T("Admin.ShippingMethods.NovaPoshta.DepartureCity") })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.ShippingMethods.NovaPoshta.DepartureCity")">
                @T("Admin.ShippingMethods.NovaPoshta.EnterDepartureCity")
            </help-trigger>
        </div>
    </div>



    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span class="text-required">@T("Admin.ShippingMethods.NovaPoshta.TypeOfDelivery")</span>
        </div>
        <div class="col-xs-6 relative">

            @Html.DropDownList("DeliveryType", Model.DeliveryTypes, new { ng_model = "shippingMethod.Params.DeliveryType", ng_init= "shippingMethod.Params.DeliveryType='" + Model.DeliveryType + "'", @class = "form-control", required = "required", validation_input_text = T("Admin.ShippingMethods.NovaPoshta.DepartureCity") })

            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.ShippingMethods.NovaPoshta.TypeOfDelivery")">
                @T("Admin.ShippingMethods.NovaPoshta.SelectTypeOfDelivery")
            </help-trigger>
        </div>
    </div>
