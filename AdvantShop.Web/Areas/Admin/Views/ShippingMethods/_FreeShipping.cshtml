@model AdvantShop.Web.Infrastructure.Admin.ShippingMethods.FreeShippingShippingAdminModel


    <div class="form-group row middle-xs">
        <div class="flex-grow-n col-fixed-size-md">
            <span>@T("Admin.ShippingMethods.FreeShipping.DeliveryTime")</span>
        </div>
        <div class="col-xs-6 relative">
            @Html.TextBoxFor(x => x.DeliveryTime, new { ng_model = "shippingMethod.Params.DeliveryTime", @class = "form-control" })
            <help-trigger class="ng-cloak help-trigger-icon-abs" data-title="@T("Admin.ShippingMethods.FreeShipping.DeliveryTime")">
                @T("Admin.ShippingMethods.FreeShipping.DeliveryTimeAsPeriodOfTime")<br><br>
                @T("Admin.ShippingMethods.FreeShipping.ForExample2days")
            </help-trigger>
        </div>
    </div>
