@{
    var layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var area = ViewContext.RouteData.DataTokens.ContainsKey("area") ? ViewContext.RouteData.DataTokens["area"] : null;
    if (area != null && area.ToString().ToLower() == "adminv3")
    {
        var templateLayout = "~/Areas/Admin/Templates/" + area + "/Views/Shared/_Layout.cshtml";
        if (VirtualPathFactory.Exists(templateLayout))
        {
            layout = templateLayout;
        }
    }

    Layout = layout;
}