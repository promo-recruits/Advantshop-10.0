@model AdvantShop.Web.Admin.Models.Settings.CommonSettingsModel

<div class="setting-title m-t-none">
    <h2 class="page-name-block-text sticky-page-name-text m-b-none">О магазине</h2>
</div>
<div class="form-group row middle-xs">
    <div class="col-xs-2 setting-form-label-wrap__mobile">
        <div class="setting-label-wrap">
            @Html.LabelFor(x => x.StoreName, T("Admin.Settings.Index.StoreName"), new { @class = "required" })
        </div>
    </div>
    <div class="col-xs-8 relative setting-form-input-wrap__mobile">
        @Html.TextBoxFor(x => x.StoreName, new { @class = "form-control", required = "required", ng_model = "settings.storeName", validation_input_text = T("Admin.Settings.Common.Common.StoreName") })
        @Html.ValidationMessageFor(model => model.StoreName)
        <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" data-title="@T("Admin.Settings.Index.StoreName")">
            <div class="help-content">
                @T("Admin.Settings.Common.Common.VarStoreName")
                <br><br>
                @T("Admin.Settings.Common.Common.UseSmallDescription")
                <br>
                <i>@T("Admin.Settings.Common.Common.ProductsForAnimals")</i>
            </div>
        </help-trigger>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="col-xs-2 setting-form-label-wrap__mobile">
        <div class="setting-label-wrap">
            @Html.LabelFor(x => x.StoreUrl, T("Admin.Settings.Index.StoreUrl"), new { @class = "required" })
        </div>
    </div>
    <div class="col-xs-8 relative setting-form-input-wrap__mobile">
        @Html.TextBoxFor(x => x.StoreUrl, new { @class = "form-control", required = "required", ng_model = "settings.storeUrl", validation_input_text = T("Admin.Settings.Common.Common.StoreURL") })
        @Html.ValidationMessageFor(model => model.StoreUrl)
        <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" data-title="@T("Admin.Settings.Index.StoreUrl")">
            @T("Admin.Settings.Common.Common.WhichAdressPurchased")
            <br><br>
            @T("Admin.Settings.Common.Common.ParameterIndicates")
            <br>
            <br>
            @T("Admin.Settings.Common.Common.DomainDetails")
            <br>
            <a href="http://www.advantshop.net/help/pages/svoy-domen" target="_blank">@T("Admin.Settings.Common.Common.InstructionsAttachStore")</a>
        </help-trigger>
    </div>
</div>

