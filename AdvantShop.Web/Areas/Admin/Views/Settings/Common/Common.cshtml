            @T("Admin.Settings.SystemSettings.LogoImageAltNote")
        </help-trigger>
    </div>
</div>

<div class="form-group row">
    <div class="col-xs-2 setting-form-label-wrap__mobile">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Index.Favicon")
        </div>
    </div>
    <div class="col-xs-8 setting-form-input-wrap__mobile">
        <div class="setting-favicon-wrap">
            @Html.PictureUploader(AdvantShop.Catalog.PhotoType.Favicon, 0, Model.FaviconSrc, fileTypes: AdvantShop.Helpers.EAdvantShopFileTypes.Favicon)
        </div>
        <div class="setting-size-text">
            @T("Admin.Settings.Index.FaviconRecommendations")
        </div>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="col-xs-2 setting-form-label-wrap__mobile">
        <div class="setting-label-wrap">
            @Html.LabelFor(x => x.CountryId, T("Admin.Settings.Index.Country"))
        </div>
    </div>
    <div class="col-xs-4 relative setting-form-input-wrap__mobile">
        @Html.DropDownListFor(x => x.CountryId, Model.Countries, new { @class = "form-control", ng_model = "settings.countryId", ng_init = "settings.countryId= '" + Model.CountryId + "'", ng_change = "settings.loadRegions('')" })
        <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" data-title="@T("Admin.Settings.Index.Country")">
            <div class="help-content">
                @T("Admin.Settings.Common.Common.SpecifyTheCountry")
            </div>
        </help-trigger>
    </div>
</div>

