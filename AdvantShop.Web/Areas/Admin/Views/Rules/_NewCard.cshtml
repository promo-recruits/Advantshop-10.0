@model AdvantShop.Web.Admin.Models.Bonuses.Rules.NewCardRuleModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.Rules.NewCard.AccrueAdditionalBonuses")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.GiftBonus, new { @class = "form-control", ng_model = "rule.Rule.GiftBonus", required = "required", validation_input_text = T("Admin.Rules.NewCard.AccrueAdditionalBonuses").ToString() })
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="">@T("Admin.Rules.NewCard.AdditionalBonuses")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.BonusAvailableDays, new { @class = "form-control", ng_model = "rule.Rule.BonusAvailableDays"})
    </div>
</div>

