@using AdvantShop.Core.Services.Admin
@{
    if (AdminAreaTemplate.IsAdminv3())
    {
        Layout = "~/Areas/Admin/Templates/" + AdminAreaTemplate.Current + "/Views/BonusSystem/_BonusSystemLayout.cshtml";
    }
}

<div class="sticky-page-name m-t-n-xs m-b-xs " sticky sticky-top="0">
    <div class="page-name-block sticky-page-name-inner">
        <div class="page-name-block-item-main flex middle-xs">
            <h2 class="m-r-xs  sticky-page-name-text m-t-none">
                @T("Admin.Rules.Index.Title")
            </h2>
        </div>
        <div class="page-name-block-item-additional">
            <ui-modal-trigger data-controller="'ModalListRulesCtrl'" controller-as="ctrl" size="md" backdrop="static"
                              template-url="../areas/admin/content/src/_shared/modal/bonus/rule/listRules.html">
                <a data-e2e="Add" class="btn btn-sm btn-success btn--margin-left" href="">
                    <span class="fa fa-plus"></span>
                    @T("Admin.Rules.Index.Add")
                </a>
            </ui-modal-trigger>
        </div>
    </div>
</div>

<div class="ibox">
    <div class="ibox-content">
        <ui-grid-custom grid-unique-id="grid"
                        grid-on-init="rules.gridOnInit(grid)"
                        grid-options="rules.gridOptions"
                        grid-url="'rules/getrules'"
                        grid-filter-enabled="false">
        </ui-grid-custom>
    </div>
</div>
