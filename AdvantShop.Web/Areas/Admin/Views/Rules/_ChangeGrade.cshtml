@model AdvantShop.Web.Admin.Models.Bonuses.Rules.ChangeGradeRuleModel

<div class="form-group row middle-xs">
    <div class="flex-grow-n col-fixed-size-md">
        @T("Admin.Rules.ChangeGrade.UseSalesForWholePeriod")
    </div>
    <div class="col-xs-6 relative">
        <label class="adv-checkbox-label form-label-block">
            @Html.CheckBoxFor(x => x.AllPeriod, new { @class = "adv-checkbox-input", ng_model = "rule.Rule.AllPeriod" })
            <span class="adv-checkbox-emul" data-e2e="AllPeriod"></span>
        </label>
        
        @*<help-trigger class="ng-cloak help-trigger-icon-abs" data-title="Срок доставки">
                Срок доставки, как отрезок времени, в который данный метод доставки сможет доставить товар.<br><br>
                Например: 1-2 дня.
            </help-trigger>*@
    </div>
</div>

<div class="form-group row middle-xs" ng-if="!rule.Rule.AllPeriod">
    <div class="flex-grow-n col-fixed-size-md">
        <span class="text-required">@T("Admin.Rules.ChangeGrade.AccountingForLastMonth")</span>
    </div>
    <div class="col-xs-6 relative">
        @Html.TextBoxFor(x => x.Period, new { @class = "form-control", ng_model = "rule.Rule.Period", required = "required", validation_input_text = T("Admin.Rules.ChangeGrade.AccountingForLastMonth").ToString() })
    </div>
</div>
