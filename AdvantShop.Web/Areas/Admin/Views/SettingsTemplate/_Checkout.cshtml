@model AdvantShop.Web.Admin.Models.Settings.Templates.SettingsTemplateModel

<div class="setting-title m-t-none">
    <h3>@T("Admin.Settings.Template.PaymentIconTitle")</h3>
</div>

<div class="form-group row">
    <div class="col-xs-3 col-wl-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Template.PaymentIcon")
        </div>
    </div>
    <div class="col-xs-2">
        <div class="m-b-xs">
            @T("Admin.Settings.Template.Width")
        </div>
        <div class="input-group m-b-sm">
            @Html.TextBoxFor(x => x.PaymentIconWidth, new { @class = "form-control", ng_model = "settingsTemplate.PaymentIconWidth", type = "number", min = "10", max = "100000", style = "width:120px;", validation_input_text = "Иконки для оплаты" })
            <span class="paramUnit">px</span>&nbsp;
        </div>
    </div>
    <div class="col-xs-2">
        <div class="m-b-xs">
            @T("Admin.Settings.Template.Height")
        </div>
        <div class="flex middle-xs">
            <div class="input-group">
                @Html.TextBoxFor(x => x.PaymentIconHeight, new { @class = "form-control", ng_model = "settingsTemplate.PaymentIconHeight", type = "number", min = "10", max = "100000", style = "width:120px;", validation_input_text = "Иконки для оплаты" })
                <span class="paramUnit">px</span>
            </div>
            <help-trigger class="ng-cloak" data-title="@T("Admin.Settings.Template.PaymentIcon")">
                @T("Admin.Settings.Template.PaymentIconNote")
            </help-trigger>
        </div>
        </div>
    </div>

<div class="form-group row">
    <div class="col-xs-3 col-wl-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Template.ShippingIcon")
        </div>
    </div>
    <div class="col-xs-2">
        <div class="m-b-xs">
            @T("Admin.Settings.Template.Width")
        </div>
        <div class="input-group m-b-sm">
            @Html.TextBoxFor(x => x.ShippingIconWidth, new { @class = "form-control", ng_model = "settingsTemplate.ShippingIconWidth", type = "number", min = "10", max = "100000", style = "width:120px;", validation_input_text = "Иконки для оплаты" })
            <span class="paramUnit">px</span>&nbsp;
        </div>
    </div>
    <div class="col-xs-2">
        <div class="m-b-xs">
            @T("Admin.Settings.Template.Height")
        </div>
        <div class="flex middle-xs">
            <div class="input-group">
                @Html.TextBoxFor(x => x.ShippingIconHeight, new { @class = "form-control", ng_model = "settingsTemplate.ShippingIconHeight", type = "number", min = "10", max = "100000", style = "width:120px;", validation_input_text = "Иконки для оплаты" })
                <span class="paramUnit">px</span>
            </div>
            <help-trigger class="ng-cloak" data-title="@T("Admin.Settings.Template.ShippingIcon")">
                @T("Admin.Settings.Template.ShippingIconNote")
            </help-trigger>
        </div>
    </div>
</div>
