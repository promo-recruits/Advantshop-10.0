<div class="form-group row middle-xs">
    <div class="col-xs-3 flex middle-xs">
        <div class="setting-label-wrap">
            @T("Admin.Settings.NotifyEMails.EmailForOrders")
        </div>
    </div>
    <div class="col-xs-4">
        @Html.TextBoxFor(x => x.EmailForOrders, new { @class = "form-control input-small", ng_model = "mailSettings.notifyemails.notifications.EmailForOrders" })
    </div>
    <help-trigger class="ng-cloak m-l-xs" data-title="@T("Admin.Settings.NotifyEMails.EmailForOrders")">
        @T("Admin.Settings.NotifyEMails.EmailForOrdersHint")
    </help-trigger>
    <div class="col-xs">
        <button type="button" class="btn btn-sm btn-success" ladda="mailSettings.sendingProgressMessage === 0" ng-click="mailSettings.sendTestMessageTemplate({nameTemplate:'EmailForOrders', emailTo: mailSettings.notifyemails.notifications.EmailForOrders}, 0)">Отправка пробного письма</button>
    </div>
</div>

