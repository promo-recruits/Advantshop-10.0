        <div class="tab-content ng-cloak" style="padding-right: 0.625rem;">
            <div class="tab-pane active" ng-if="staticPages.settingsTab == 'pages'">
                <ui-grid-custom grid-unique-id="gridPages"
                                grid-row-identificator="'StaticPageId'"
                                grid-on-init="staticPages.gridOnInit(grid)"
                                grid-options="staticPages.gridOptions"
                                grid-url="'staticPages/getStaticPages'"
                                grid-inplace-url="'staticPages/InplaceStaticPage'"
                                grid-extend-ctrl="staticPages">
                    <ui-grid-custom-footer class="ui-grid-custom-footer" ng-bind="staticPages.grid.gridOptions.TotalString">
                    </ui-grid-custom-footer>
                </ui-grid-custom>
            </div>

            <div class="tab-pane active" ng-if="staticPages.settingsTab == 'blocks'">
                <ui-grid-custom grid-unique-id="gridBlocks"
                                grid-row-identificator="'StaticBlockId'"
                                grid-options="staticBlock.gridOptions"
                                grid-on-init="staticBlock.gridOnInit(grid)"
                                grid-url="'staticBlock/GetItems'"
                                grid-inplace-url="'staticBlock/inplace'"
                                grid-extend-ctrl="staticBlock">
                    <ui-grid-custom-footer class="ui-grid-custom-footer" ng-bind="staticBlock.grid.gridOptions.TotalString">
