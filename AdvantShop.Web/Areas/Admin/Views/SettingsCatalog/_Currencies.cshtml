                <span>@T("Admin.SettingsCatalog.Currencies.InstructionsSettingCurrency")</span>
            </a>
        </div>
        <div class="page-name-block-item-additional">
            <button class="btn btn-sm btn-success" data-e2e="CurrenciesSettingUpdate" type="button" ng-click="settingsCatalog.updateCb()">
                <span class="fa fa-plus"></span>
                @T("Admin.Settings.Catalog.UpdateCB")
            </button>

            <ui-modal-trigger data-controller="'ModalAddEditCurrencyCtrl'" controller-as="ctrl" on-close="settingsCatalog.modalProcessResult()"
                              template-url="../areas/admin/content/src/settingsCatalog/modal/addEditCurrency/AddEditCurrency.html">
                <button class="btn btn-sm btn-success" type="button" data-e2e="CurrenciesSettingAdd">
                    <span class="fa fa-plus"></span>
                    @T("Admin.Settings.Catalog.AddCurrency")
                </button>
            </ui-modal-trigger>
        </div>
    </div>
</div>

<div class="form-group row middle-xs">
    <div class="col-xs-3 col-wl-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Catalog.DefaultCurrency")
        </div>
    </div>
    <div class="col-xs-4 relative">
        <select name="DefaultCurrencyIso3" class="form-control"
                ng-model="settingsCatalog.DefaultCurrencyIso3"
                ng-options="s.label for s in settingsCatalog.currencies track by s.value"
                ng-init="settingsCatalog.initCurrencies({label: '@Model.DefaultCurrencyName', value: '@Model.DefaultCurrencyIso3'})"></select>
        <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.DefaultCurrency")'>
            @T("Admin.Settings.Catalog.DefaultCurrencyHint")
        </help-trigger>
    </div>
</div>

<div class="form-group row">
    <div class="col-xs-3 col-wl-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Catalog.AllowToChangeCurrency")
        </div>
    </div>
    <div class="col-xs-4">
        <label class="adv-checkbox-label">
            @Html.CheckBoxFor(x => x.AllowToChangeCurrency, new { @class = "adv-checkbox-input", ng_model = "settingsCatalog.AllowToChangeCurrency" })
            <span class="adv-checkbox-emul" data-e2e="AllowToChangeCurrency"></span>
        </label>
        <help-trigger class="ng-cloak m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.AllowToChangeCurrency")'>
            @T("Admin.Settings.Catalog.AllowToChangeCurrencyHint")
        </help-trigger>
    </div>
</div>

<div class="form-group row">
    <div class="col-xs-3 col-wl-2">
        <div class="setting-label-wrap">
            @T("Admin.Settings.Catalog.AutoUpdateCurrencies")
        </div>
    </div>
    <div class="col-xs-4">
        <label class="adv-checkbox-label">
            @Html.CheckBoxFor(x => x.AutoUpdateCurrencies, new { @class = "adv-checkbox-input", ng_model = "settingsCatalog.AutoUpdateCurrencies" })
            <span class="adv-checkbox-emul" data-e2e="AutoUpdateCurrencies"></span>
        </label>
        <help-trigger class="ng-cloak m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.AutoUpdateCurrencies")'>
            @T("Admin.Settings.Catalog.AutoUpdateCurrenciesHint")
        </help-trigger>
    </div>
</div>


<div class="m-t-md">
    <ui-grid-custom ng-if="settingsCatalog.tabCurrencyShow"
                    grid-unique-id="gridCurrencies"
                    grid-row-identificator="'CurrencyId'"
                    grid-on-init="settingsCatalog.gridCurrenciesOnInit(grid)"
                    grid-options="settingsCatalog.gridCurrenciesOptions"
                    grid-url="'settingsCatalog/getCurrenciesPaging'"
                    grid-inplace-url="'settingsCatalog/currencyInplace'"
                    grid-extend-ctrl="settingsCatalog"
                    grid-on-delete="settingsCatalog.updateCurrencies()"
                    grid-on-inplace-apply="settingsCatalog.updateCurrencies(rowEntity, colDef, newValue, oldValue)">
    </ui-grid-custom>
</div>