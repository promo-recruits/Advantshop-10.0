<div class="sticky-page-name  m-t-n-xs" sticky sticky-top="0">
    <div class="page-name-block sticky-page-name-inner">
        <div class="page-name-block-item-main flex middle-xs m-t-none">
            <h3 class="sticky-page-name-text bold" data-e2e="CurrenciesSettingTitle">
                @T("Admin.Settings.Catalog.Currencies")
            </h3>
            <a class="inline-flex link-academy link-invert middle-xs p-l-sm p-b-xs" href="http://www.advantshop.net/help/pages/currency" target="_blank">
