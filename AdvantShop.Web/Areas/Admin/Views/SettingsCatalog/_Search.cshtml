        </div>
    </div>
</div>
    <div class="form-group row">
        <div class="col-xs-3 col-wl-2">
            <div class="setting-label-wrap">
                @T("Admin.Settings.Catalog.SearchIndex")
            </div>
        </div>
        <div class="col-xs-4">
            <a href="javascript:void(0)" ng-click="settingsCatalog.reindex()">@T("Admin.Settings.Catalog.GenerateIndex")</a>
            <help-trigger class="ng-cloak m-l-xs" data-title="@T("Admin.Settings.Catalog.SearchIndex")">
                @T("Admin.Settings.Feedback.FeedbackActionHint")
            </help-trigger>
        </div>
    </div>

    <div class="form-group row middle-xs">
        <div class="col-xs-3 col-wl-2">
            <div class="setting-label-wrap">
                @T("Admin.Settings.Catalog.SearchDeep")
            </div>
        </div>
        <div class="col-xs-4 relative">
            @Html.DropDownListFor(x => x.SearchDeep, Model.SearchDeepList, new { @class = "form-control input-small", ng_model = "settingsCatalog.SearchDeep" })
            <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.SearchDeep")'>
                @T("Admin.Settings.Catalog.SearchDeepHint")
            </help-trigger>
        </div>
    </div>

    <div class="form-group row middle-xs">
        <div class="col-xs-3 col-wl-2">
            <div class="setting-label-wrap">
                @T("Admin.Settings.Catalog.Search_MaxItems")
            </div>
        </div>
        <div class="col-xs-4 relative">
            @Html.TextBoxFor(x => x.SearchMaxItems, new { @class = "form-control input-small", ng_model = "settingsCatalog.SearchMaxItems" })
            <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.Search_MaxItems")'>
                @T("Admin.Settings.Catalog.Search_MaxItemsHint")
            </help-trigger>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3 col-wl-2">
            <div class="setting-label-wrap">
                @T("Admin.Settings.Catalog.SearchExample")
            </div>
        </div>
        <div class="col-xs-4 relative">
            @Html.TextAreaFor(x => x.SearchExample, new { @class = "form-control input-small", ng_model = "settingsCatalog.SearchExample" })
            <help-trigger class="ng-cloak help-trigger-icon-abs m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.SearchExample")'>
                @T("Admin.Settings.Catalog.SearchExampleHint")
            </help-trigger>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3 col-wl-2">
            <div class="setting-label-wrap">
                @T("Admin.Settings.Catalog.MinimizeSearchResults")
            </div>
        </div>
        <div class="col-xs-4">
            <label class="adv-checkbox-label">
                @Html.CheckBoxFor(x => x.MinimizeSearchResults, new { @class = "adv-checkbox-input", ng_model = "settingsCatalog.MinimizeSearchResults" })
                <span class="adv-checkbox-emul" data-e2e="MinimizeSearchResults"></span>
            </label>

            <help-trigger class="ng-cloak m-l-xs" classes="'setting__catolog-popover-custom'" data-title='@T("Admin.Settings.Catalog.MinimizeSearchResult")'>
                @T("Admin.Settings.Catalog.MinimizeSearchResultsHint")
            </help-trigger>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-3 col-wl-2">
            <div class="setting-label-wrap">
                @T("Admin.Settings.Catalog.SearchProductCategories")
            </div>
        </div>
        <div class="col-xs-4 relative">
            <label class="adv-checkbox-label">
                @Html.CheckBoxFor(x => x.SearchByCategories, new { @class = "adv-checkbox-input", ng_model = "settingsCatalog.SearchByCategories" })
                <span class="adv-checkbox-emul" data-e2e="SearchByCategories"></span>
            </label>
        </div>
    </div>
    }
