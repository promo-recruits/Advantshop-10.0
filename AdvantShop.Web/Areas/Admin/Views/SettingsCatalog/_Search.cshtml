@model AdvantShop.Web.Admin.Models.Settings.CatalogSettings.CatalogSettingsModel

@if (Model.IsEnabledSearchModule)
{
    <div style="text-align:center;">
        <h3>
            Активирован модуль для поиска товаров.
        </h3>
        <div>
            Управление поиском теперь осуществляется внутри самого модуля.
        </div>
    </div>
}
else
{
