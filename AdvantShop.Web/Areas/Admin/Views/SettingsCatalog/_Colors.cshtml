            </div>
            <div class="flex">
                <div class="page-name-block-item-additional">
                    <ui-modal-trigger data-controller="'ModalImportColorsCtrl'" controller-as="ctrl"
                                      template-url="../areas/admin/content/src/colors/modal/importColors/importColors.html"
                                      data-on-close="colors.grid.fetchData()">
                        <a data-e2e="Import" class="btn btn-sm btn-link btn--margin-left" style="min-width: 60px;" href="">
                            @T("Admin.Colors.Index.Import")
                        </a>
                    </ui-modal-trigger>
                </div>
                <div class="page-name-block-item-additional">
                    <a data-e2e="Export" class="btn btn-sm btn-link btn--margin-left" style="min-width: 60px;" href="" ng-click="colors.startExportColors()">
                        @T("Admin.Colors.Index.Export")
                    </a>
                </div>

                <ui-modal-trigger data-controller="'ModalAddEditColorCtrl'" controller-as="ctrl"
                                  template-url="../areas/admin/content/src/colors/modal/addEditColor/addEditColor.html"
                                  data-on-close="colors.grid.fetchData()">
                    <button class="btn btn-sm btn-success btn--margin-left" data-e2e="ColorSettingAdd" type="button">
                        <span class="fa fa-plus"></span>
                        @T("Admin.Colors.Index.AddColor")
                    </button>
                </ui-modal-trigger>
            </div>
        </div>
    </div>
    <div>
        <ui-grid-custom grid-unique-id="gridColors"
                        grid-on-init="colors.gridOnInit(grid)"
                        grid-options="colors.gridOptions"
                        grid-url="'colors/getcolors'"
                        grid-inplace-url="'colors/inplacecolor'"
                        grid-search-placeholder="'@T("Admin.Colors.Index.SearchByName")'"
                        grid-extend-ctrl="colors">
            <ui-grid-custom-footer class="ui-grid-custom-footer" ng-bind="colors.grid.gridOptions.TotalString">
            </ui-grid-custom-footer>
        </ui-grid-custom>
    </div>
    <div class="adv-panel-info m-t-md">
        <a href="https://www.advantshop.net/help/pages/spravochniki#1" target="_blank" class="p-l-xs m-t-xs ">@T("Admin.Colors.Index.Instruction")</a>
    </div>
</div>