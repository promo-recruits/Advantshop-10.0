@model AdvantShop.Web.Admin.Models.Orders.Grastin.SendRequestForIntake

<form novalidate="novalidate">
    <div class="modal-header">
        <ui-modal-cross></ui-modal-cross>
        <h2 class="modal-header-title">@T("Admin.Grastin.SendindApplication")</h2>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">

            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label">
                        @T("Admin.Grastin.RegionPickGoods")
                    </label>
                    <div class="col-xs-9">
                        @Html.DropDownListFor(x => x.RegionId, Model.Regions, new { ng_model = "ctrl.regionId", @class = "form-control", required = "required", validation_input_text = T("Admin.Grastin.RegionPickGoods") })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label">
                        @T("Admin.Grastin.TimePickUp")
                    </label>
                    <div class="col-xs-9">
                        @Html.DropDownListFor(x => x.Time, Model.Times, new { ng_model = "ctrl.time", @class = "form-control", required = "required", validation_input_text = T("Admin.Grastin.TimePickUp") })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label">
                        @T("Admin.Grastin.VolumeOfOrders")
                    </label>
                    <div class="col-xs-9">
                        @Html.DropDownListFor(x => x.Volume, Model.Volumes, new { ng_model = "ctrl.volume", @class = "form-control", required = "required", validation_input_text = T("Admin.Grastin.VolumeOfOrders") })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-save btn-primary" type="button" button-validation-success="ctrl.send(); ctrl.btnLoading = true" ladda="ctrl.btnLoading" data-button-validation>@T("Admin.Grastin.Send")</button>
        <button class="btn btn-default btn-cancel" type="button" ng-click="ctrl.close()">@T("Admin.Grastin.Cancel")</button>
    </div>
</form>
