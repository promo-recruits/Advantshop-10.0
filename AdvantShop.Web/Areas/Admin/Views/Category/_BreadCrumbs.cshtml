@model List<AdvantShop.CMS.BreadCrumbs>
@if (Model.Any())
{
    <ul class="breadcrumb">
        @for (var i = 0; i < Model.Count; ++i)
        {
            if (!string.IsNullOrEmpty(Model[i].Url))
            {
                <li>
                    <a class="link-invert" href="@Model[i].Url">@Html.Raw(Model[i].Name)</a>
                    @if (Model.Count - 1 != i)
                        {
                        <span class="divider">→</span>
                    }
                </li>
            }
            else
            {
                <li>@Html.Raw(Model[i].Name)</li>
            }
        }
    </ul>
}