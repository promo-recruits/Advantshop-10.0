@using AdvantShop.Core.Services.Admin
@{
    var staticPath = "~/" + UrlService.GetAdminStaticPath();
    var cssBundleName = "all_admin_new" + (AdminAreaTemplate.Current == "adminv2" ? "" : "_v3") + ".css";

    var staticPathV3 = "~/areas/admin/templates/adminv3/content/";


    Html.ReplaceBundle(staticPath + "styles/style.css", staticPathV3 + "styles/style.css", cssBundleName);
    Html.ReplaceBundle(staticPath + "styles/theme.css", staticPathV3 + "styles/theme.css", cssBundleName);
    Html.ReplaceBundle(staticPath + "styles/search.css", staticPathV3 + "src/_shared/search/styles/search.css", cssBundleName);

    Html.AddBundles(new List<string>()
    {
        staticPath + "src/_partials/sidebar-menu/sidebar-menu.css",
        staticPath + "src/_shared/modal/styles/simpleUimodal.css",

        staticPath + "src/_shared/iframe-responsive/iframe-responsive.css",

        staticPathV3 + "src/_shared/modal/styles/uimodal.css",

        staticPath + "src/_partials/sidebar-user/styles/sidebar-user.css",

        staticPathV3 + "src/_partials/settings/styles/settings.css",

        staticPathV3 + "src/_partials/top-panel/top-panel.css",

		staticPathV3 + "styles/shared/scrollbar-custom.css",

        staticPath + "src/_partials/lead-info/styles/lead-info.v3.css",

        staticPathV3 + "src/_shared/loaders/iframe-loader.css",

    },
cssBundleName);
}
<link rel="stylesheet" type="text/css" href="@UrlService.GetUrl()areas/admin/templates/adminv3/content/src/color-schemes/@(SettingsDesign.AdminAreaColorScheme)/styles.css" admin-color-scheme />

