@model AdvantShop.Web.Admin.ViewModels.Shared.Common.SearchViewModel

<form role="search" class="row end-lg search-header" method="post" action="search" data-ng-controller="SearchBlockCtrl as search">
    <div class="header-search-field-wrap col-lg col-md col-xs">
        <div class="search-input-wrap">
            <input data-window-click="search.windowClick(event)"
                   data-ng-class="{'search-input--active': search.isFocus}"
                   type="text"
                   name="search"
                   required
                   class="search-input"
                   placeholder="@T("Admin.SearchBlock.SearchPlaceholder")"
                   value="@Model.Search"
                   ng-model="search.q"
                   uib-typeahead="item for items in search.find($viewValue)"
                   autocomplete="false"
                   typeahead-should-select="search.shouldSelect()"
                   typeahead-template-url="../areas/admin/content/src/_shared/search/templates/search-item.html"
                   typeahead-popup-template-url="../areas/admin/content/src/_shared/search/templates/search-popup.html"
                   typeahead-min-length="2"
                   typeahead-wait-ms="300"
                   typeahead-loading="search.loading"
                   typeahead-no-results="search.noResults"/>
            
            <svg ng-click="search.toggle()" xmlns="http://www.w3.org/2000/svg" class="absolute search-icon--custom" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" viewBox="0 0 56.966 56.966" width="18px" height="18px">
                <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" fill="#2D9CEE" />
            </svg>
        </div>
    </div>
</form>
