@model AdvantShop.Web.Admin.ViewModels.Home.OrdersDasboardViewModel

<ul class="orders-statuses">
    @foreach (var status in Model.OrderStatuses)
    {
        <li class="orders-statuses__item">
            <a class="orders-statuses__link" href="@(Url.AbsoluteActionUrl("Index", "Orders") + (status.OrderStatusId != 0 ? "#?grid={\"OrderStatusId\":\"" + status.OrderStatusId + "\"}" : ""))"
                   onclick="return advTrack('@AdvantShop.Track.ETrackEvent.Core_Common_OrdersDashboard_ClickOrderStatus.ToString()');">
                <span class="orders-statuses__colorcode" style="background-color: #@(status.Color.IsNotEmpty() ? status.Color : "000");"></span>
                <span class="orders-statuses__name">@status.StatusName</span>
                <span class="orders-statuses__count">@status.OrdersCount</span>
            </a>
        </li>
    }
</ul>
