@using AdvantShop.Trial

<div class="row flex-nowrap home__head">
    <div class="col-xs">
        <a class="home-shopname__link" href="@UrlService.GetAdminUrl()">
            @{
            string shopname = SettingsMain.AdminShopName.IsNotEmpty() ? SettingsMain.AdminShopName : (SettingsMain.AdminShopName = TrialService.IsTrialEnabled ? SettingsMain.ShopName : SettingsMain.SiteUrl.Replace("http://", "").Replace("https://", "").Replace("www.", ""));
            }

            @shopname
        </a>
    </div>
    <div class="col-xs-slim">
        @if (SettingsMain.StoreActive)
        {
        <a class="btn btn-md btn-success" href="@UrlService.GetUrl()" title="@SettingsMain.SiteUrl" onclick="return advTrack('@AdvantShop.Track.ETrackEvent.Core_Common_ClickStorefrontLink.ToString()');">
            @T("Admin.Common.TopMenu.ShopWindow")
        </a>
        }
    </div>
</div>