@model SubBlockModel
@{
    var content = string.IsNullOrEmpty(Model.ViewPath) ? Html.Raw(Model.SubBlock.ContentHtml) : Html.Partial(Model.ViewPath, Model);
}

@if (Model.InPlace)
{
    <subblock-inplace data-sublock-id="@Model.SubBlock.Id"
                      data-name="@Model.SubBlock.Name"
                      data-type="@Model.SubBlock.Type"
                      data-sort-order="@Model.SubBlock.SortOrder"
                      data-settings="@Model.SubBlock.Settings">
        @content
    </subblock-inplace>
}
else
{
    @content
}