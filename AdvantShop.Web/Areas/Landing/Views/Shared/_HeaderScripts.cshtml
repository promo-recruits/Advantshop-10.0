@{
    var lpStaticPath = LpFiles.LpStaticPath;
    var outputFolder = "~/pictures/landing/" + LpService.CurrentSiteId + "/";

    var generatedCss = string.Format(LpFiles.LpGeneratedCss, LpService.CurrentSiteId);
    var isExist = File.Exists(HostingEnvironment.MapPath(generatedCss));
    if (isExist)
    {
        Html.AddBundles(new List<string>() { generatedCss }, "lp_head.css");
    }
    else
    {
        var regenerateCss = new LpService().ReGenerateCss(LpService.CurrentSiteId);
        if (regenerateCss && File.Exists(HostingEnvironment.MapPath(generatedCss)))
        {
            Html.AddBundles(new List<string>() { generatedCss }, "lp_head.css");
        }
    }

    var fontMain = LSiteSettings.FontMain;
    if (!string.IsNullOrEmpty(fontMain))
    {
        var font = LSiteSettings.GetDefaultFonts().Find(x => x.Name == fontMain);
        if (font != null)
        {
            if (!string.IsNullOrEmpty(font.LocalUrl))
