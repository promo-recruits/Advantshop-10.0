@model BlockModel
<div class="container-fluid">
    <div class="lp-container">
        <div class="row center-xs text-left">
            <div class="col-xs-12 @Model.Block.GetWidthInColumnsAsClasses()">
                <div class="row center-xs middle-xs">
                    <div class="col-xs-12">
                        <div class="lp-block-cover-horizontal-form-header lp-h1 lp-h1--color">
                            @Html.SubBlock(Model, "title")
                        </div>
                        <div class="lp-block-cover-horizontal-form-text lp-h3 lp-h3--color">
                            @Html.SubBlock(Model, "text")
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        @Html.Form(Model.Form, false)
                    </div>
                </div>
                @Html.Partial("_CoverScrollToBlock", Model)
            </div>
        </div>
    </div>
</div>
