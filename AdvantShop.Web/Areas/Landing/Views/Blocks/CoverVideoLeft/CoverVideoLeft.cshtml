@model BlockModel
<div class="container-fluid">
    <div class="lp-container">
        <div class="row center-xs text-left">
            <div class="col-xs-12 @Model.Block.GetWidthInColumnsAsClasses()">
                <div class="row between-sm start-xs">
                    <div class="col-xs-12 col-sm-5">
                        @Html.SubBlock(Model, "video")
                    </div>
                    <div class="col-xs-12 col-sm-6 first-xs last-sm lp-block-cover-video-left-text-wrap">
                        <div class="lp-block-cover-video-left-header lp-h2 lp-h2--color" data-e2e="CoverVideoLeftTitle">
                            @Html.SubBlock(Model, "title")
                        </div>
                        <div class="lp-block-cover-video-left-text lp-h3 lp-h3--color" data-e2e="CoverVideoLeftText">
                            @Html.SubBlock(Model, "text")
                        </div>
                        @if (Model.Block.TryGetSetting("show_button") == true)
                        {
                            <div class="lp-block-cover-video-left-lp-btn-wrap" data-e2e="CoversBtn">
                                <div class="row @Model.Block.TryGetSetting("align_btns")">
                                    <div class="col-xs-12">
                                        @Html.Button(Model.Block, "button")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @Html.Partial("_CoverScrollToBlock", Model)
                </div>
            </div>
        </div>
    </div>
</div>

