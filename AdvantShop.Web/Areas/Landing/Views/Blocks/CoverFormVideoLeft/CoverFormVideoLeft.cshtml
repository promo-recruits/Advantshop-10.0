@model BlockModel
<div class="container-fluid">
    <div class="lp-container">
        <div class="row middle-xs">
            <div class="col-xs-12">
                <div class="lp-block-cover-form-video-left-header lp-h1 lp-h1--color">
                    @Html.SubBlock(Model, "title")
                </div>
                <div class="lp-block-cover-form-video-left-text lp-h3 lp-h3--color">
                    @Html.SubBlock(Model, "text")
                </div>
            </div>
        </div>
        <div class="row center-xs text-left">
            <div class="col-xs-12 @Model.Block.GetWidthInColumnsAsClasses()">
                <div class="row between-sm start-xs">
                    <div class="col-xs-12 col-sm-5 m-b-md">
                        @Html.SubBlock(Model, "video")
                    </div>
                    <div class="col-xs-12 col-sm-6 m-b-md">
                        @Html.Form(Model.Form)
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("_CoverScrollToBlock", Model)
    </div>
</div>