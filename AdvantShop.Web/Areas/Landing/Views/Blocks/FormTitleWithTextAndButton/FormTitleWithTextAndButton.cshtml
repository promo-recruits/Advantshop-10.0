@model BlockModel

<div class="container-fluid">
    <div class="lp-container" data-e2e="@(Model.Config.Name)_container">
        <div class="row">
            <div class="col-xs-12 @Model.Block.GetWidthInColumnsAsClasses()">
                <div class="row between-xs middle-xs">
                    <div class="col-xs-12 text-center">
                        @if (Model.Block.TryGetSetting("show_title") == true)
                        {
                            <div class="lp-h2 lp-h2--color" data-e2e="FormTitleBlock">@Html.SubBlock(Model, "title")</div>
                        }
                        @if (Model.Block.TryGetSetting("show_subtitle") == true)
                        {
                            <div class="lp-h3 lp-h3--color" data-e2e="FormSubTitleBlock">@Html.SubBlock(Model, "subtitle")</div>
                        }
                    </div>
                    <div class="col-xs-12 col-md-9 col--v-pad">
                        <div class="row middle-xs">
                            <div class="col-xs-12 col-sm-4 lp-font-size--large lp-block-form-title-with-text-and-button__header col--v-pad" data-e2e="FormHeader">
                                @Html.SubBlock(Model, "header")
                            </div>
                            <div class="col-xs-slim lp-block-form-title-with-text-and-button__divider col--v-pad">
                                <div class="lp-block-form-title-with-text-and-button__divider--vertical color-scheme__divider"></div>
                            </div>
                            <div class="col-xs-12 col-sm  lp-font-size--middle lp-block-form-title-with-text-and-button__text col--v-pad" data-e2e="FormText">
                                @Html.SubBlock(Model, "text")
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-slim col--v-pad">
                        <div class="row center-xs">
                            <div class="col-xs-12">
                                @Html.Button(Model.Block, "button")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

