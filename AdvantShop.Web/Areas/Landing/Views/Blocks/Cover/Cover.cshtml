@model BlockModel
<div class="container-fluid">
    <div class="lp-container">
        <div class="row start-xs center-sm middle-xs">
            <div class="col-xs-12 col-sm-8 @Model.Block.GetWidthInColumnsAsClasses()">
                <div class="lp-cover-header lp-h1 lp-h1--color" data-e2e="TitleCover">
                    @Html.SubBlock(Model, "title")
                </div>
                <div class="lp-cover-text lp-h3 lp-h3--color" data-e2e="TextCover">
                    @Html.SubBlock(Model, "text")
                </div>
                @if (Model.Block.TryGetSetting("show_button") == true)
                {
                    <div class="lp-cover-btn-wrap" data-e2e="CoversBtn">
                        <div class="row @(Model.Block.TryGetSetting("align_btns") != null ? Model.Block.TryGetSetting("align_btns") : "center-xs")">
                            <div class="col-xs-12">
                                @Html.Button(Model.Block, "button")
                            </div>
                        </div>
                    </div>
                }
            </div>
            @Html.Partial("_CoverScrollToBlock", Model)
        </div>
    </div>
</div>
