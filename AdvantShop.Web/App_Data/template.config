<?xml version="1.0" encoding="utf-8"?>
<Settings>
  <!-- Дизайн и представление -->
  <SettingSection Title="SectionDesign">
    <Setting Name="MainPageMode" Type="DropDownList">
      <option Title="MainPageModeDefault" Value="Default" />
      <option Title="MainPageModeTwoColumns" Value="TwoColumns" />
      <Value>TwoColumns</Value>
    </Setting>
    <Setting Name="MenuStyle" Type="DropDownList">
      <option Title="MenuStyleClassic" Value="Classic" />
      <option Title="MenuStyleModern" Value="Modern" />
      <option Title="MenuStyleAccordion" Value="Accordion" />
      <option Title="MenuStyleTreeView" Value="Treeview" />
      <Value>Modern</Value>
    </Setting>
    <Setting Name="SearchBlockLocation" Type="DropDownList">
      <option Title="SearchNone" Value="None" />
      <option Title="SearchTopMenu" Value="TopMenu" />
      <option Title="SearchCatalogMenu" Value="CatalogMenu" />
      <Value>TopMenu</Value>
    </Setting>
