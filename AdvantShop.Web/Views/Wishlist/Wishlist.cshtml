@model AdvantShop.Core.Services.Catalog.ProductViewModel

<div data-ng-controller="WishlistPageCtrl as wishlistPage">
    <div class="page-title-row wishlist-title-row">
        <div class="wishlist-title">
            <div class="h2 myaccount-subtitle">@T("Wishlist.Index.WishListHeader")</div>
        </div>
    </div>
    @if (Model.Products.Any())
    {
        <div data-ng-init="wishlistPage.countObj.count = @Model.Products.Count" data-ng-hide="wishlistPage.countObj.count === 0">
            <div data-wishlist-wrapper="[data-product-view-item]" class="products-view @(AdvantShop.Helpers.MobileHelper.IsMobileEnabled() ? "products-view-tile" : "products-view-list") wishlist-page__productview products-view-container">
                @Html.Partial("_ProductView", Model)
            </div>
        </div>
    }
    <div data-ng-hide="wishlistPage.countObj.count > 0" class="wishlist-empty  @(Model.Products.Any() ? "ng-hide" : "")">
        @T("Wishlist.Index.EmptyList")
    </div>
</div>