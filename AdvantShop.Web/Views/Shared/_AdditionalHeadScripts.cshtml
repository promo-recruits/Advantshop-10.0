@{
    var isMobile = SettingsDesign.IsMobileTemplate;
    var mq = isMobile == true ? "(min-width: 768px) and (orientation: portrait),(min-width: 896px) and (orientation: landscape), " : "(max-width: 768px), (max-device-width: 768px)";
}

    <script>

    @**original file path: ~/scripts/_mobile/mobileRedirect.js *@
   !function(){"use strict";window.matchMedia("@mq").addListener(function(e){!void(!0===e.matches?document.documentElement.classList.add('@(isMobile ? "desktop-redirect-panel" : "mobile-redirect-panel")'):document.documentElement.classList.remove('@(isMobile ? "desktop-redirect-panel" : "mobile-redirect-panel")'))})}();
    </script>